    <title>Short_URL_CREATER</title>
</head>

<body class="  bg-info-subtle text-emphasis-light">
    <% if(tr1!=""){ %>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <%= tr1  %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <% if(tr5!=""){ %>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <%= tr5  %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <% if(tr6!=""){ %>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <%= tr6  %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div class="position-absolute top-50 start-20 translate-middle-y ">
                        <a class="navbar-brand fs-1 h1 my-5 position-relative top-50" href="/">URL-SHORTENER</a>
                        <div class="d-grid gap-2 my-5"> 
                            <a class="btn btn-lg btn-primary mb-3" href="/create" role="button">Create</a>
                            <a class="btn btn-lg btn-primary mb-3" href="/second" role="button">Search</a>
                            <a class="btn btn-lg btn-primary mb-3" href="/" role="button">logout</a>
                          </div>
                    </div>
                    
                </div>
                <div class="col-8">
                    <form action="/create" method="POST">
                        <div class="container text-center">
                            <h5 class="my-5">Generate URL</h5>
                            <div class="input-group mb-3 my-3">
                                <input type="text" name="cUrl" class="form-control my-3" placeholder="URL" aria-label="Recipient's username"
                                    aria-describedby="button-addon2" required>
                            </div>
                            <div class="input-group mb-3">
                                <input type="text" name="cNote" class="form-control my-3" placeholder="Note"
                                    aria-label="Recipient's username" aria-describedby="button-addon2" required>
                            </div>
                            <button class="btn btn-lg btn-outline-secondary" type="submit" id="button-addon2">Create</button>
                        </div>
                    </form>
                    <% if(tr3.length>0){%>
                        <div class="container text-center my-5">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                      <tr>
                                        <th scope="col">URL</th>
                                        <th scope="col">NOTE</th>
                                        <th scope="col">NEW-SHORTENED-URL</th>
                                      </tr>
                                    </thead>
                                    <tbody>
                                        <% tr3.forEach(shortUrl => { %>
                                            <tr>
                                                <td><a href="<%= shortUrl.fullurl  %>"><%= shortUrl.fullurl  %></a></td>
                                                <td><%= shortUrl.note %></td>
                                                <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
                                            </tr>
                                        <%})%>
                    
                                    </tbody>
                                  </table>
                            </div>
                        </div>
                        <%}%>
                    
                </div>
            </div>
        </div>

    
